<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.spring.my.BoardMapper">
	
	<insert id="insert" parameterType="Board">
		<selectKey keyProperty="bnum" resultType="int" order="BEFORE">
			select bseq.nextval from dual
		</selectKey>
		insert into board(bnum,userid,subject,content,ip)
		VALUES (#{bnum},#{userid},#{subject},#{content},#{ip})
	</insert>
	
	<delete id="delete">
		DELETE FROM board
		WHERE bnum = #{bnum}
	</delete>
	
	<update id="update">
		UPDATE board
		set 
		subject = #{subject},
		content =  #{content},
		ip = #{ip},
		modifydate = sysdate
		WHERE bnum = #{bnum}
	</update>
	
	<select id="selectone" resultType="Board">
		select * from board
		WHERE bnum = #{bnum}
	</select>
	
	<select id="selectlist" resultType="Board">
		select * from board
<!--  		<if test="findkey != ''">
			<if test="findvalue != 'userid'">
				WHERE userid  like '%' || #{userid} || '%'
			</if>
			<if test="findvalue != 'subject'">
				WHERE subject  like '%' || #{subject} || '%'
			</if>
		</if> --> 
	</select>
	
</mapper>