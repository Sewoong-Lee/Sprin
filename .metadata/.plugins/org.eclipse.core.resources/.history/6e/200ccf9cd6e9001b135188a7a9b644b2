<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.spring.my.ReplyMapper">
	
	<insert id="insert" parameterType="Reply">
		insert into reply(rnum, bnum, userid, content, ip, restep, relevel)
		VALUES (rseq.nextval,#{bnum},#{userid},#{content},#{ip},#{restep},#{relevel})
	</insert>
	
	<!-- 글 순서 +1 -->
	<update id="updaterestep">
		update reply
		set restep = restep+1
		where bnum = #{bnum}
		and restep >= #{restep}
	</update>
	
	<!-- 댓글의 리스트 조회 -->
	<select id="selectlist" resultType="Reply">
		select * from reply
		where bnum = #{bnum}
		ORDER by restep
	</select>
	
	
</mapper>